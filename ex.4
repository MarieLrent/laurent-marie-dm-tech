// On définit trois variables : 
// La variable "one" correspondant au chiffre de départ à savoir 1
// La variable "starter" correspondant au nombre de départ demandé
// La variable "zero" correspondant justement à 0 pour pouvoir débuter l'addition

let one = 1
let starter = 20
let zero = 0

// Tant que la variable "one" sera inférieur ou égale à "starter", la boucle devra continuer

while (one <= starter) {

// À chaque boucle, on ajoutera la variable "one" à "zero"

zero += one

// À chaque boucle, on ajoutera 1 à "one"

one += 1}

// Une fois que "one" devient égal à "starter", on ferme la boucle

// Pour finir, on affiche le résultat dans la console

console.log(zero);
