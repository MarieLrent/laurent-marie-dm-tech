//Je déclare la fonction "Reverse" avec l'argument "inverser".

function Reverse(inverser) {

// J'applique à l'argument "inverser" la commande de découpe, d'inversion et de jonction afin que celle-ci soit inverser.

  return inverser.split("").reverse("").join("");
}

// Je crée une variable nommée "inversion" qui fait appel à ma fonction Reverse pour l'argument ("Marie DC3")

var inversion = Reverse("Marie DC3");

// Je demande à afficher la variable "inversion"

console.log(inversion);
